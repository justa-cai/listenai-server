# Cloud Agent V1.1 - LLM Gateway Configuration

# Server
CLOUD_HOST=0.0.0.0
CLOUD_PORT=9400
CLOUD_PING_INTERVAL=30
CLOUD_PING_TIMEOUT=300
CLOUD_MAX_CONNECTIONS=100
CLOUD_SESSION_TIMEOUT=3600

# Logging (format: console, json, or text)
CLOUD_LOG_LEVEL=INFO
CLOUD_LOG_FORMAT=console

# LLM Service
LLM_API_KEY=123
LLM_BASE_URL=http://localhost:9500/v1/
LLM_MODEL=Qwen3-4B-Instruct-2507
LLM_TIMEOUT=120
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=10240

# MCP Protocol
MCP_ENABLED=true
MCP_SERVER_NAME=arcs-mini-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_PROTOCOL_VERSION=2024-11-05
MCP_INSTRUCTIONS=ARCS Mini MCP 服务器，提供设备控制、音乐播放、图片识别等功能

# Amap (高德地图) Weather API
# 获取方式: 访问 https://console.amap.com/ 注册并创建 Web 服务 API Key
# 免费额度: 个人开发者 100万次/日
AMAP_API_KEY=
WEATHER_API_ENABLED=true

# Roleplay Mode (角色扮演模式) LLM Configuration
# 角色扮演模式下使用的LLM服务器地址（可选，不设置则使用默认LLM配置）
ROLEPLAY_LLM_BASE_URL=http://192.168.13.228:8000/v1/
ROLEPLAY_LLM_MODEL=Qwen3-30B-A3B
ROLEPLAY_LLM_API_KEY=123
ROLEPLAY_LLM_TIMEOUT=120
ROLEPLAY_LLM_TEMPERATURE=0.8
ROLEPLAY_LLM_MAX_TOKENS=28672

# Client Service URLs (for reference, client connects directly)
# ASR_SERVICE_URL=ws://192.168.1.169:9200
# TTS_SERVICE_URL=ws://192.168.1.169:9300/tts
# CLOUD_AGENT_URL=ws://192.168.1.169:9400
